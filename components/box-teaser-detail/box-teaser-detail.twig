{% block boxteaserdetail %}
  <div class="box-teaser box-teaser--detail">
    <div class="box-teaser__line-task">
      <h2 class="box-teaser__title">{{ boxteaserdetail.title }}</h2>
      <span class="box-teaser__status">{{ boxteaserdetail.status }}</span>
    </div>
    <div class="box-teaser__line-task">
      <div class="box-teaser__category box-teaser__line-item"><label class="box-teaser__label">Category</label>{{ boxteaserdetail.category }}</div>
      <div class="box-teaser__grade-lever box-teaser__line-item"><label class="box-teaser__label">Grade Lever</label>{{ boxteaserdetail.grade }}</div>
      <div class="box-teaser__subject box-teaser__line-item"><label class="box-teaser__label">Subject</label>{{ boxteaserdetail.subject }}</div>
      <div class="box-teaser__course box-teaser__line-item"><label class="box-teaser__label">Course</label>{{ boxteaserdetail.course }}</div>
    </div>
    <div class="box-teaser__line-task">
      <div class="box-teaser__rating box-teaser__line-item"><label class="box-teaser__label">Rating</label><select class="box-teaser__rating-select">
          <option value="1">1</option>
          <option value="2">2</option>
          <option value="3">3</option>
          <option value="4">4</option>
          <option value="5">5</option>
        </select>
      </div>
      <div class="box-teaser__tags box-teaser__line-item"><label class="box-teaser__label">Tags</label>{% include "../box-tags/box-tags.twig" %}</div>
    </div>
    <div class="box-teaser__img"><img src="../../images/imgdetail.jpg"></div>
    <div class="box-teaser__content">{{ boxteaserdetail.content }}</div>
  </div>
{% endblock %}


